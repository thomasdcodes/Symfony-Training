{% block title %}Crawling{% endblock %}

{% block body %}
    <h1>Crawling</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ crawling.id }}</td>
        </tr>
        <tr>
            <th>Target</th>
            <td>{{ crawling.target }}</td>
        </tr>
        <tr>
